<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

<LinearLayout
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- 标题区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:background="@drawable/status_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLE AWS Gateway"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- 扫描控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/status_background"
        android:padding="16dp">

        <Button
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_scan"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvScanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_scanning"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- 状态信息区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/status_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDeviceCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/device_count"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvConnectionPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_pool"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- 批量操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnConnectSelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connect_all_devices"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDisconnectSelected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/disconnect_all_devices"
            android:background="@drawable/button_secondary"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- 发现的设备列表标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discovered_devices"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- 发现的设备列表 -->
    <ListView
        android:id="@+id/listViewDevices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/results_background"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp" />

    <!-- 连接状态栏 -->

    <!-- 已连接设备列表标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connected_devices"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- 已连接设备列表 -->
    <ListView
        android:id="@+id/listViewConnectedDevices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:dividerHeight="1dp"
        android:background="@drawable/results_background"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- 快速发送按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSendR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:enabled="false" />

    </LinearLayout>

    <!-- Real-time data area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:background="@drawable/status_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <!-- BLE status with indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/ivBleStatusDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/indicator_red"
                android:contentDescription="BLE status"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvBleConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ble_disconnected"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- AWS status with indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/ivAwsStatusDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/indicator_red"
                android:contentDescription="AWS status"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvAwsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aws_disconnected"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/start_receiving"
        android:textOn="@string/stop_receiving"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:enabled="false"
        android:layout_marginBottom="16dp" />

    <!-- BLE data testing area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/status_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ble_data_testing"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Send data type selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_format"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spinnerSendType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true" />
        </LinearLayout>

        <!-- Send data input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etSendData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_data_to_send"
                android:textColor="@android:color/black"
                android:background="@drawable/results_background"
                android:padding="12dp"
                android:enabled="true"
                android:inputType="textNoSuggestions|textVisiblePassword" />

            <Button
                android:id="@+id/btnSendData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:background="@drawable/button_light_blue"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:enabled="true" />
        </LinearLayout>

        <!-- Receive data type selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receive_format"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/spinnerReceiveType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAwsSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aws_iot_settings"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>
        
    <Button
        android:id="@+id/btnPerformanceTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/performance_test"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btnConnectAws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connect_aws_iot"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>
            
        <Button
            android:id="@+id/btnDiagnoseAws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diagnose"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    
    <!-- Log control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnDetailedLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detailed_log"
            android:textSize="12sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />
            
        <Button
            android:id="@+id/btnCopyLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_log"
            android:textSize="12sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />
            
        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_log"
            android:textSize="12sp"
            android:background="@drawable/button_light_blue"
            android:textColor="@android:color/black"
            android:padding="8dp" />
    </LinearLayout>

    <!-- 日志区域，固定高度避免过度占用空间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/results_background"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_log"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="12dp"
            android:background="#E3F2FD" />
            
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvReceivedData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </ScrollView>
    </LinearLayout>

    <!-- 性能监控区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/status_background"
        android:elevation="2dp"
        android:padding="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/real_time_performance_monitor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />
            
        <!-- Tab切换器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <Button
                android:id="@+id/btnResourceChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/resource"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white" />
                
            <Button
                android:id="@+id/btnThroughputChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/throughput_latency"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/button_light_blue"
                android:textColor="@android:color/black" />
                
            <Button
                android:id="@+id/btnCostChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/cost"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                android:background="@drawable/button_light_blue"
                android:textColor="@android:color/black" />
        </LinearLayout>
            
        <!-- 单图表显示区域 -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white" />
            
        <!-- 双图表显示区域 (吞吐量+延迟) -->
        <LinearLayout
            android:id="@+id/layoutDualCharts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="8dp">
            
            <!-- 吞吐量图表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_throughput"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="8dp"
                    android:background="#E3F2FD" />
                    
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartThroughput"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/white" />
            </LinearLayout>
            
            <!-- 延迟图表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_latency"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="8dp"
                    android:background="#E3F2FD" />
                    
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartLatency"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
            
        <!-- 性能指标摘要 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:padding="8dp">
            
            <TextView
                android:id="@+id/tvCpuUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cpu_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tvMemUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/memory_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tvNetworkUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
</ScrollView>
