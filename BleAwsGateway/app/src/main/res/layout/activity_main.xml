<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫描 BLE 设备" />

    <ListView
        android:id="@+id/listViewDevices"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:dividerHeight="1dp" />

    <!-- 实时数据区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BLE: 未连接"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAwsStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AWS: 未连接"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="开始接收"
        android:textOn="停止接收"
        android:enabled="false" />
    <Button
        android:id="@+id/btnAwsSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AWS IoT 设置"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btnConnectAws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="连接 AWS IoT"
        android:layout_marginTop="8dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvReceivedData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </ScrollView>
    <!-- 新增：跳转到 AWS IoT 设置的按钮 -->


    
</LinearLayout>
