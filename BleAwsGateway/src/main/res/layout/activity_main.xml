<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<LinearLayout
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnBleScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ble_device_scan" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connected_devices"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <ListView
        android:id="@+id/listViewConnectedDevices"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:dividerHeight="1dp" />

    <!-- 快速发送按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSendR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Y"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:enabled="false" />
    </LinearLayout>

    <!-- Real-time data area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ble_disconnected"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAwsStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aws_disconnected"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="@string/start_receiving"
        android:textOn="@string/stop_receiving"
        android:enabled="false" />

    <!-- BLE data testing area -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ble_data_testing"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Send data type selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_format"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerSendType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false" />
    </LinearLayout>

    <!-- Send data input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etSendData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_data_to_send"
            android:enabled="false" />

        <Button
            android:id="@+id/btnSendData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:layout_marginStart="8dp"
            android:enabled="false" />
    </LinearLayout>

    <!-- Receive data type selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receive_format"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spinnerReceiveType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAwsSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aws_iot_settings"
        android:layout_marginTop="8dp"/>
        
    <Button
        android:id="@+id/btnPerformanceTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/performance_test"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        
        <Button
            android:id="@+id/btnConnectAws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connect_aws_iot"
            android:layout_marginEnd="4dp"/>
            
        <Button
            android:id="@+id/btnDiagnoseAws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/diagnose"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    
        <!-- Log control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnDetailedLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detailed_log"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />
            
        <Button
            android:id="@+id/btnCopyLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_log"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />
            
        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_log"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 日志区域，固定高度避免过度占用空间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#f0f0f0"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_log"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#e0e0e0" />
            
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvReceivedData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </ScrollView>
    </LinearLayout>

    <!-- 性能监控区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:elevation="2dp"
        android:padding="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/real_time_performance_monitor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />
            
        <!-- Tab切换器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <Button
                android:id="@+id/btnResourceChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/resource"
                android:textSize="11sp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />
                
            <Button
                android:id="@+id/btnThroughputChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/throughput_latency"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="#CCCCCC"
                android:textColor="#666666" />
                
            <Button
                android:id="@+id/btnCostChart"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/cost"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#CCCCCC"
                android:textColor="#666666" />
        </LinearLayout>
            
        <!-- 单图表显示区域 -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:background="#FAFAFA" />
            
        <!-- 双图表显示区域 (吞吐量+延迟) -->
        <LinearLayout
            android:id="@+id/layoutDualCharts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="8dp">
            
            <!-- 吞吐量图表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_throughput"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="#E3F2FD" />
                    
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartThroughput"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FAFAFA" />
            </LinearLayout>
            
            <!-- 延迟图表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_latency"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="#FFF3E0" />
                    
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartLatency"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#FAFAFA" />
            </LinearLayout>
        </LinearLayout>
            
        <!-- 性能指标摘要 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:padding="8dp">
            
            <TextView
                android:id="@+id/tvCpuUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cpu_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FF6B35"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tvMemUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/memory_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:gravity="center" />
                
            <TextView
                android:id="@+id/tvNetworkUsage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network_usage"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
</ScrollView>
